# SeekEvidence - DeepMicroPath Frontend Configuration
# Copy this file to .env.local for development

# DeepMicroPath Backend API Configuration (required)
NEXT_PUBLIC_DEEPMICROPATH_API_URL=http://172.20.1.38:8000/api/v1
NEXT_PUBLIC_DEEPMICROPATH_API_KEY=

# Feature Flags
ENABLE_FILE_UPLOAD=true
ENABLE_MICROBIOLOGY_MODE=true
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=csv,jpg,jpeg,png,pdf

# Polling Configuration  
JOB_STATUS_POLL_INTERVAL=2000  # milliseconds
MAX_POLL_ATTEMPTS=300  # 10 minutes max

# Display Configuration
NEXT_PUBLIC_APP_NAME=SeekEvidence - DeepMicroPath AI Assistant
NEXT_PUBLIC_DEFAULT_MODEL=deepmicropath-chat

# Optional: Access password for the frontend
CODE=

# Enable MCP functionality (optional)
# Default: Empty (disabled)
# Set to "true" to enable MCP functionality
ENABLE_MCP=
